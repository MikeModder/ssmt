<%- include('../partials/header', { title: 'Recent Posts', user: user, desc: 'See recent posts on SSMT!' }); %>
    <h2 class="center-align">Recent posts:</h2>
    <div><p class="center-align">Below is user-generated content, which I have no control over.</p></div>
    <div class="row">
            <% for(let i = 0; i < posts.length; i++){ %>
                <div class="card center-align col s6">
                    <div class="card-content">
                        <span class="card-title"><a href="/posts/<%= posts[i]._id %>">View this post</a></span>
                        <p><%- posts[i].text %></p>
                    </div>
                    <div class="card-action">
                        <small>
                            Posted by <a href="/user/<%= posts[i].poster.id %>" style="color: <%= posts[i].poster.color %>"><%= posts[i].poster.username %></a> | Posted <%= posts[i].createdAt %> ago
                        </small>
                    </div>
                </div>
            <% } %>
    </div>
    <br><br><br>
<%- include('../partials/footer'); %>