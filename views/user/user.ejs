<%- include('../partials/header', { title: `${puser.username}'s Profile`, user: user, desc: `${puser.username}'s prfile page on SSMT!` }); %>
    <div class="container">
        <h4 class="center-align">Welcome to <span style="color: <%= puser.profile.color %>"><%= puser.username %></span>'s page! </h1>
            <br>
            <span style="color: <%= puser.profile.color %>"><%= puser.username %></span>'s bio: <strong><%= puser.bio %></strong>
            <br><br><br>
            <h5 class="center-align"><span style="color: <%= puser.profile.color %>"><%= puser.username %></span>'s posts:</h2>
            <div class="row">
                    <% for(let i = 0; i < posts.length; i++){ %>
                        <div class="card center-align col s6">
                            <div class="card-content">
                                <span class="card-title"><a href="/posts/<%= posts[i]._id %>">View this post</a></span>
                                <p><%= posts[i].text %></p>
                            </div>
                            <div class="card-action">
                                <small>
                                    Posted <%= posts[i].createdAt %> ago
                                </small>
                            </div>
                        </div>
                    <% } %>
            </div>
    </div>
<%- include('../partials/footer'); %>