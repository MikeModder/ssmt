<%- include('../partials/header', { title: 'Recent Posts', user: user, desc: 'See recent posts on SSMT!' }); %>
    <h2 class="center-align">Recent posts:</h2>
    <div class="row">
            <% for(let i = 0; i < posts.length; i++){ %>
                <div class="card center-align col s6">
                    <div class="card-content">
                        <span class="card-title"><a href="/posts/<%= posts[i].id %>">Post <%= posts[i].id %></a></span>
                        <p><%= posts[i].text %></p>
                    </div>
                    <div class="card-action">
                        <small>
                            Posted by <%= posts[i].poster %> | <%= posts[i].points %> points
                        </small>
                    </div>
                </div>
            <% } %>
    </div>
    <br><br><br>
<%- include('../partials/footer'); %>