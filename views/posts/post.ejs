<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Post <%= id %> | SSMT</title>
    <script src="https://code.jquery.com/jquery-3.3.0.min.js"></script>
    <script>
        const pId = <%= id %>;

        function upVote(){
            $.post('/posts/vote', { postId: pId, type: 'up' }, (resp, status) => {
                $('#points').text(`${resp.points} points`);
            });
        }
        
        function downVote(){
            $.post('/posts/vote', { postId: pId, type: 'down' }, (resp, status) => {
                $('#points').text(`${resp.points} points`);
            });
        }

    </script>
</head>
<body>
    <strong><%= text %></strong>
    <br><br><br>
    <small id="points"><%= points %> points</small>
    <button onclick="upVote()">upvote</button>
    <button onclick="downVote()">downvote</button>
</body>
</html>